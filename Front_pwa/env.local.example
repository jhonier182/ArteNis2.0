# ===========================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO
# ===========================================
# Copia este archivo como .env.local y configura los valores

# ===========================================
# CONFIGURACIÓN DE API
# ===========================================
# URL base del backend API - CAMBIAR POR TU IP
NEXT_PUBLIC_API_URL=http://192.168.1.3:3000

# ===========================================
# CONFIGURACIÓN DE ENTORNO
# ===========================================
NODE_ENV=development

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================
# Habilitar logs de debug
NEXT_PUBLIC_DEBUG=true

# ===========================================
# CONFIGURACIÓN DE IMÁGENES
# ===========================================
# Dominios permitidos para optimización de imágenes
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,192.168.1.4,192.168.0.8,192.168.1.3

# ===========================================
# CONFIGURACIÓN DE PWA
# ===========================================
NEXT_PUBLIC_APP_NAME=ArteNis
NEXT_PUBLIC_APP_DESCRIPTION=Plataforma de arte digital
NEXT_PUBLIC_APP_VERSION=2.0.0

# ===========================================
# CONFIGURACIÓN DE RED
# ===========================================
NEXT_PUBLIC_API_TIMEOUT=10000

# ===========================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ===========================================
NEXT_PUBLIC_TOKEN_EXPIRY=3600

# ===========================================
# CONFIGURACIÓN DE CACHE
# ===========================================
NEXT_PUBLIC_ENABLE_CACHE=true

# ===========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ===========================================
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
